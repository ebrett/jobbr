!!! XML
!!!
%html{ :xmlns => 'http://www.w3.org/1999/xhtml'  }
  %head
    %title JobbR

    = csrf_meta_tags

    :javascript
      function getURLParameter(name) {
        return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search)||[,""])[1].replace(/\+/g, '%20'))||null
      }

    = stylesheet_link_tag    'jobbr/application.css'
    = javascript_include_tag 'jobbr/application.js'

  %body
    .navbar.navbar-default
      .navbar-header
        %a.navbar-brand= t('.title')
      .collapse.navbar-collapse
        .nav.navbar-nav.navbar-right
          %a.btn.btn-default#auto-refresh{type: 'button', 'data-toggle' => 'button', href: '#'}
            = icon 'refresh'
            = t('.auto_refresh')
    #main.container
      = yield
